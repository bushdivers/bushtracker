<Window x:Class="BushDiversTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BushDiversTracker"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="Bush Tracker" Closing="Window_Closing" Loaded="Window_Loaded">
    <DockPanel LastChildFill="True">
        <StatusBar Margin="0,10,0,0" VerticalAlignment="Top" DockPanel.Dock="Bottom">
            <StatusBarItem HorizontalAlignment="Left">
                <TextBlock x:Name="lblStatusText" Padding="5,5" Background="#D1D5DB" Foreground="#374151" FontSize="11" Text="Ok" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="lblErrorText" Padding="5,5" Text="test" Background="#FECACA" Foreground="#DC2626" FontSize="11" />
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
            <Label x:Name="lblVersion" Content="" HorizontalAlignment="Stretch" VerticalAlignment="Top" FontSize="8"/>
                
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="1">
                <Grid MinWidth="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" x:Name="label" Content="API Key:" Margin="10,5"/>
                    <Label Grid.Column="1" x:Name="lblConnectStatus" Content="MSFS Connection Status:" Margin="10,5,0,5" HorizontalAlignment="Right"/>
                    <Ellipse Grid.Column="2" x:Name="elConnection" Height="10" Margin="10" Stroke="Red" Fill="Red" HorizontalAlignment="Right" Width="10"/>
                </Grid>
                <PasswordBox x:Name="txtKey" Padding="5" Margin="10,5,10,10" Password="" VerticalAlignment="Top"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                <Button x:Name="btnConnect" ContextMenuOpening="btnConnect_ContextOpen" Click="btnConnect_Click" Content="Connect to Sim" Padding="5" Margin="10,10,0,0" HorizontalAlignment="Stretch" >
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="MSFS (SimConnect)" Click="btnConnect_SetSim" Name="mnuSetSimMSFS"/>
                            <MenuItem Header="XPlane" Click="btnConnect_SetSim" Name="mnuSetSimXP" IsEnabled="False" />
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
                <CheckBox x:Name="chkTextToSim" Content="Send text to sim" Margin="10,10,0,0" Checked="chkSimText_Checked" Unchecked="chkSimText_Checked" ToolTip="When checked, BushTracker will automatically attempt to start tracking your flight"/>
                <Button x:Name="btnFetchBookings" Click="btnFetchBookings_Click"  Content="Fetch Dispatch" Padding="5" Margin="10,10,0,0" HorizontalAlignment="Stretch" />
                <Label x:Name="lblFetch" Content="fetching..." HorizontalAlignment="Left" Margin="10,0,0,0" FontSize="10" Height="23" Width="53"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
                <DataGrid x:Name="dgBookings" CanUserAddRows="False" HorizontalGridLinesBrush="#FF4B4949" VerticalGridLinesBrush="#FF4B4949" Height="100" ColumnWidth="Auto" MinColumnWidth="40" />
                <Label x:Name="lblDeadHead" Content="This is a deadhead flight, there is no cargo" Margin="0" FontSize="10" />
            </StackPanel>
            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,0" Orientation="Vertical">
                <Button x:Name="btnStop" Click="btnStop_Click" IsEnabled="True" Content="Cancel Flight" Padding="5" Margin="10,10,0,0" HorizontalAlignment="Stretch" />
                <Canvas Margin="10,10,0,0">
                    <Label x:Name="lblStart" Content="checking info..." Margin="9,0,0,0" FontSize="10" Height="23"/>
                    <Label x:Name="lblDistanceLabel" Content="Distance:" HorizontalAlignment="Left" Margin="9,0,0,0" FontSize="10" Height="23"/>
                    <Label x:Name="lblDistance" Content="0" Margin="58,0,0,0" FontSize="10" Height="23"/>
                </Canvas>
                
                <Label x:Name="lblTrackerStatus" Content="..." Margin="10,5,0,0" FontSize="10" Height="23" />
                <Label x:Name="lblFlightStatus" Content="..." Margin="10,5,0,0" FontSize="10" Height="23" />

                <Button x:Name="btnSubmit" Click="btnSubmit_Click" IsEnabled="False" Content="Submit Pirep" Padding="5" Margin="10,10,0,0" HorizontalAlignment="Stretch" />
                <Label x:Name="lblSubmitting" Content="submitting..." HorizontalAlignment="Left" Margin="10,10,0,0" FontSize="10"/>

                <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                    <RadioButton x:Name="rdoUnitUS" Content="US" Margin="0,5" GroupName="unitOfMeasure" Checked="rdoUnitType_Checked" MinWidth="70" />
                    <RadioButton x:Name="rdoUnitMetric" Content="Metric" Margin="0,5" GroupName="unitOfMeasure" Checked="rdoUnitType_Checked" />
                </StackPanel>
                <CheckBox x:Name="chkAutoStart" Content="Allow tracking start" Margin="10,5,0,0" VerticalAlignment="Top" Checked="chkAutoStart_Checked" Unchecked="chkAutoStart_Checked" ToolTip="When checked, BushTracker will automatically attempt to start tracking your flight"/>
                <CheckBox x:Name="chkQuickstart" Content="Allow running engine" Margin="10,5,0,0" VerticalAlignment="Top" Checked="chkQuickstart_Checked" Unchecked="chkQuickstart_Checked" ToolTip="When checked, BushTracker will permit tracking start with engine already running.&#x0a;&#x0a;We reserve the right to make a frowny face and deduct imaginary internet points."/>
                
                <Button x:Name="btnAddons" Content="BD Addons" Visibility="Hidden" Padding="0" Margin="0" VerticalAlignment="Top" HorizontalAlignment="Stretch" Click="btnAddons_Click"/>
            </StackPanel>
            <StackPanel Grid.Row="2" Grid.Column="1">
                <GroupBox x:Name="grpFlight" Margin="10,0,10,10" VerticalAlignment="Top" Height="215" HorizontalAlignment="Stretch">
                    <GroupBox.Header>
                        Dispatch Details
                    </GroupBox.Header>
                    <Canvas VerticalAlignment="Top" Height="191" Margin="2,0,0,0" HorizontalAlignment="Stretch" MinWidth="571">
                        <Label x:Name="lblDep" Content="Departure:" Height="19" Width="66" HorizontalAlignment="Center" Padding="0" Canvas.Left="9" Canvas.Top="9" VerticalAlignment="Top"/>
                        <Label x:Name="txtDeparture" Content="Test" Width="92" Height="19" HorizontalAlignment="Center" Padding="0" Canvas.Left="99" Canvas.Top="9" VerticalAlignment="Center"/>
                        <Label x:Name="lblArr" Content="Arrival:" Height="19" Width="46" HorizontalAlignment="Center" Padding="0" Canvas.Left="10" Canvas.Top="48" VerticalAlignment="Top"/>
                        <Label x:Name="txtArrival" Content="Test" Width="92" Height="19" HorizontalAlignment="Center" Padding="0" Canvas.Left="99" Canvas.Top="48" VerticalAlignment="Center"/>
                        <Label x:Name="lblAircraft" Content="Aircraft:" Height="20" Width="50" HorizontalAlignment="Left" Padding="0" Canvas.Left="199" Canvas.Top="10" VerticalAlignment="Center"/>
                        <Label x:Name="txtAircraft" Content="Test" Width="234" Height="20" HorizontalAlignment="Left" Padding="0" Canvas.Left="286" Canvas.Top="10" VerticalAlignment="Center"/>
                        <Label x:Name="lblReg" Content="Registration:" Height="20" Width="76" HorizontalAlignment="Left" Padding="0" Canvas.Left="199" Canvas.Top="48" VerticalAlignment="Center"/>
                        <Label x:Name="txtRegistration" Content="Test" Width="234" Height="18" HorizontalAlignment="Left" Padding="0" Canvas.Left="286" Canvas.Top="48" VerticalAlignment="Center"/>
                        <Label x:Name="lblFuel" Content="Planned Fuel:" Height="19" Width="80" HorizontalAlignment="Left" Padding="0" Canvas.Left="199" Canvas.Top="92" VerticalAlignment="Center"/>
                        <Label x:Name="txtFuel" Content="Test" Width="234" Height="19" HorizontalAlignment="Center" Padding="0" Canvas.Left="286" Canvas.Top="92" VerticalAlignment="Center"/>
                        <Label x:Name="lblCargo" FontStyle="Italic" FontSize="10" Content="Cargo:" Height="18" Width="44" HorizontalAlignment="Left" Padding="0" Canvas.Left="20" Canvas.Top="110" VerticalAlignment="Top"/>
                        <Label x:Name="txtCargoWeight" FontStyle="Italic" FontSize="10" Content="Test" Width="92" Height="18" HorizontalAlignment="Left" Padding="0" Canvas.Left="99" Canvas.Top="110" VerticalAlignment="Center"/>
                        <Label x:Name="lblPax" FontStyle="Italic" FontSize="10" Content="PAX:" Height="18" Width="32" HorizontalAlignment="Center" Padding="0" Canvas.Left="20" Canvas.Top="126" VerticalAlignment="Center"/>
                        <Label x:Name="txtPaxCount" FontStyle="Italic" FontSize="10" Content="Test" Width="92" Height="19" HorizontalAlignment="Left" Padding="0" Canvas.Left="99" Canvas.Top="126" VerticalAlignment="Center"/>
                        <Label x:Name="lblDepartureError" Content="Incorrect location" Foreground="#FFF00808" Width="174" Height="19" HorizontalAlignment="Center" Padding="0" Canvas.Left="18" Canvas.Top="25" VerticalAlignment="Top"/>
                        <Label x:Name="lblCargoError" Content="Payload does not match" Foreground="#FFF00808" Width="165" Height="19" HorizontalAlignment="Left" Padding="0" Canvas.Left="18" Canvas.Top="167" VerticalAlignment="Center"/>
                        <Label x:Name="lblAircraftError" Foreground="#FFF00808" Content="Aircraft does not match" Height="18" Width="158" HorizontalAlignment="Left" Padding="0" Canvas.Left="208" Canvas.Top="25" VerticalAlignment="Center"/>
                        <Label x:Name="lblFuelError" Foreground="#FFF00808" Content="Fuel does not match" Height="20" Width="158" HorizontalAlignment="Left" Padding="0" Canvas.Left="208" Canvas.Top="124" VerticalAlignment="Center"/>
                        <Label x:Name="lblPayloadTotal" Content="Total Payload:" Height="19" Width="82" HorizontalAlignment="Center" Padding="0" Canvas.Left="9" Canvas.Top="92" VerticalAlignment="Top"/>
                        <Label x:Name="txtPayloadTotal" Content="Test" Width="92" Height="19" HorizontalAlignment="Center" Padding="0" Canvas.Left="99" Canvas.Top="92" VerticalAlignment="Center"/>
                        <Label x:Name="lblTour" Content="Tour:" Height="19" Width="36" HorizontalAlignment="Left" Padding="0" Canvas.Left="199" Canvas.Top="150" VerticalAlignment="Center"/>
                        <Label x:Name="txtTour" Content="Test" Width="234" Height="19" HorizontalAlignment="Center" Padding="0" Canvas.Left="286" Canvas.Top="150" VerticalAlignment="Center"/>
                        <Label x:Name="lblSimFuel" FontStyle="Italic" FontSize="10" Content="Sim Fuel:" Height="18" Width="48" HorizontalAlignment="Center" Padding="0" Canvas.Left="208" Canvas.Top="110" VerticalAlignment="Top"/>
                        <Label x:Name="txtSimFuel" FontStyle="Italic" FontSize="10" Content="N/A" Width="234" Height="18" HorizontalAlignment="Center" Padding="0" Canvas.Left="286" Canvas.Top="110" VerticalAlignment="Center"/>
                        <Label x:Name="lblSimPayload" FontStyle="Italic" FontSize="10" Content="Sim Payload:" Height="19" Width="64" Padding="0" Canvas.Left="18" Canvas.Top="150" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Label x:Name="txtSimPayload" FontStyle="Italic" FontSize="10" Content="N/A" Width="92" Height="19" Padding="0" Canvas.Left="99" Canvas.Top="150" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Label x:Name="lblSettingsError" Content="Game settings are invalid" Foreground="#FFF00808" Width="167" Height="19" Padding="0" Canvas.Left="199" Canvas.Top="167" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                    </Canvas>
                </GroupBox>
            </StackPanel>
        </Grid>

    </DockPanel>

</Window>